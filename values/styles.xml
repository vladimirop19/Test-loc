<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/orange_default</item>
        <item name="colorControlHighlight">@color/orange_default</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange_default</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/green</item>
    </style>


    <style name="AppTheme.SplashTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="AppTheme.NoActionBarNoFits">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/orange_default</item>
    </style>

    <style name="AppTheme.Main">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/background_toggle</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="Theme.AppCompat.DayNight">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">10dp</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomLocationLayer" parent="LocationLayer">
        <item name="navigationDrawable">@drawable/marker_location_track</item>
        <item name="foregroundDrawable">@drawable/marker_location</item>
        <item name="backgroundDrawable">@drawable/marker_location_stroke</item>
        <item name="accuracyColor">#00000000</item>
    </style>

    <style name="ConnectedControlButton">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
